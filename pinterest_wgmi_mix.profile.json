{
    "meta": {
      "profile_name": "PinterestWGMIHybridStyle",
      "version": "1.0.0",
      "purpose": "Blend the Pinterest/Behance minimal fluid motion with WGMI's modular 3D, futuristic interface style for UI or background generation."
    },
  
    "visual_language": {
      "themes": ["futuristic", "playful", "neon-modular", "minimal-grid"],
      "composition": "clean split sections with top bright gradient and bottom dark modular grid",
      "motifs": ["3d character blocks", "soft-glow cards", "floating modules", "dot grid backdrop"]
    },
  
    "palette": {
      "primary": "#1E73FF",
      "secondary": "#FF2A00",
      "accent": ["#5AA0FF", "#FF7A3B", "#00FFB3"],
      "backgrounds": {
        "light_zone": "#F8F8FA",
        "dark_zone": "#0E0F12",
        "grid_overlay": "rgba(255,255,255,0.08)"
      },
      "gradient": {
        "type": "linear",
        "angle": 135,
        "colors": ["#1E73FF", "#FF5D2B", "#FF8A3D"]
      }
    },
  
    "layout": {
      "structure": [
        { "section": "header", "style": "minimal nav with neon hover glow" },
        { "section": "hero", "columns": 2, "layout": "text-left visual-right" },
        { "section": "modules", "grid": "3-column card layout", "background": "dark modular" },
        { "section": "footer", "elements": ["cta", "social", "brand mascot"], "background": "black" }
      ],
      "card_style": {
        "shape": "rounded-xl",
        "shadow": "0 10px 40px rgba(0,0,0,0.25)",
        "hover_effect": "lift-glow",
        "border": "1px solid rgba(255,255,255,0.1)"
      },
      "dot_grid": {
        "enable": true,
        "spacing_px": 16,
        "color": "rgba(255,255,255,0.08)"
      }
    },
  
    "motion": {
      "overall_tempo": "smooth",
      "easing": "ease-in-out",
      "animations": [
        { "name": "module_float", "type": "y-oscillation", "amplitude": 8, "speed": 2.5 },
        { "name": "grid_scroll", "type": "parallax-y", "speed": 0.4 },
        { "name": "glow_pulse", "type": "opacity-pulse", "speed": 1.2 },
        { "name": "gradient_shift", "type": "background-pan", "direction": "45deg", "speed": 0.05 }
      ]
    },
  
    "typography": {
      "font_family": "Inter, Poppins, sans-serif",
      "weights": { "heading": 700, "body": 400, "cta": 600 },
      "text_color_light": "#0E0F12",
      "text_color_dark": "#FFFFFF",
      "headings": {
        "style": "large, bold, high contrast",
        "effects": ["letter-tight", "slight-shadow"]
      }
    },
  
    "modules": {
      "3d_cards": {
        "appearance": "chunky rounded blocks with face expressions or icons",
        "lighting": "studio soft",
        "motion": "slow hover float",
        "shadow": "soft, colored per light"
      },
      "cta_buttons": {
        "shape": "pill",
        "gradient": ["#1E73FF", "#FF5D2B"],
        "hover": "brighten and elevate",
        "text": "uppercase white bold"
      }
    },
  
    "output_targets": {
      "use_cases": [
        "Animated hero backgrounds with floating modules",
        "Pinterest-style vertical reels with modular 3D cards",
        "Website hero with glowing gradient transitions"
      ],
      "export_as": ["React components", "WebGL/Canvas elements", "video frames (9:16)"]
    },
  
    "integration_hint": {
      "mount_strategy": "absolute-behind",
      "target_selectors": [".hero-section", ".module-grid"],
      "safe_z_index": { "background": -1, "content": 10 },
      "blend_mode": "screen",
      "reduced_motion_strategy": "static-grid-with-gradient"
    },
  
    "dev_notes_for_generator": {
      "goal": "Cursor should replicate a hybrid interface mixing WGMI’s modular, blocky 3D visuals and Pinterest’s clean animated feel.",
      "motion_hint": "Use slight depth and floating parallax. Apply slow looping background glow transitions.",
      "composition_hint": "Upper half — bright gradient hero with floating modules. Lower half — dark grid cards with 3D objects."
    }
  }
  