{
  "name": "ai-ecom-tool",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write .",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "seed": "pnpm --filter @ai-ecom/db run seed",
    "db:generate": "pnpm --filter @ai-ecom/db run prisma:generate",
    "db:migrate": "pnpm --filter @ai-ecom/db run prisma:migrate",
    "tunnel:dev": "cloudflared tunnel --config infra/cloudflared/config.yml run"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.14.12",
    "@vitest/coverage-v8": "^4.0.6",
    "@vitest/ui": "^4.0.6",
    "happy-dom": "^20.0.10",
    "prettier": "^3.3.3",
    "turbo": "^2.1.3",
    "typescript": "^5.5.4",
    "vitest": "^4.0.6"
  }
}
